class Solution {
    public List<String> generateParenthesis(int n) {
        List<String> result = new ArrayList<>();
        generate(result, 0, 0, new StringBuilder(), n);
        return result;
    }

    private void generate(List<String> result, int open, int close, StringBuilder sb, int n){
        // Base condition
        int len = sb.length();
        if(len == n*2){
            result.add(sb.toString());
            return;
        }

        // Add '(' if possible
        if(open < n){
            sb.append('(');
            generate(result, open + 1, close, sb, n);
            sb.deleteCharAt(len); // backtrack, (not need len-1)
        }

        // Add ')' if valid
        if(open > close){
            sb.append(')');
            generate(result, open, close + 1, sb, n);
            sb.deleteCharAt(len); // backtrack
        }
    }
}
// Time Complexity: O(C_n)
// Space Complexity: O(C_n . n)
